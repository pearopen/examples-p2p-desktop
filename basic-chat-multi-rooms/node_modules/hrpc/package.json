{
  "name": "hrpc",
  "version": "4.3.0",
  "files": [
    "lib/*.js",
    "builder.mjs",
    "builder.cjs",
    "runtime.mjs",
    "runtime.cjs"
  ],
  "imports": {
    "path": {
      "bare": "bare-path",
      "default": "path"
    },
    "fs": {
      "bare": "bare-fs",
      "default": "fs"
    }
  },
  "exports": {
    "./package": "./package.json",
    ".": {
      "import": "./builder.mjs",
      "require": "./builder.cjs"
    },
    "./runtime": {
      "import": "./runtime.mjs",
      "require": "./runtime.cjs"
    }
  },
  "scripts": {
    "test": "brittle test/*.test.js",
    "test:bare": "bare test/index.test.js",
    "format": "prettier --write .",
    "lint": "prettier --check ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "b4a": "^1.6.7",
    "bare-rpc": "^1.1.0",
    "hyperschema": "^1.10.4",
    "streamx": "^2.22.0"
  },
  "devDependencies": {
    "bare-fs": "^4.1.2",
    "bare-path": "^3.0.0",
    "bare-stream": "^2.6.5",
    "brittle": "^3.18.0",
    "prettier": "^3.6.2",
    "prettier-config-holepunch": "^1.0.0"
  }
