{
  "name": "pear-state",
  "version": "1.0.4",
  "main": "index.js",
  "type": "commonjs",
  "description": "Pear state",
  "license": "Apache-2.0",
  "files": [
    "bare/",
    "node/"
  ],
  "author": "Holepunch Inc",
  "scripts": {
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "test:gen": "brittle -r test/all.js test/*.test.js",
    "test": "npm run test:bare && npm run test:node",
    "test:bare": "brittle-bare --coverage test/all.js",
    "test:node": "brittle-node --coverage test/all.js"
  },
  "imports": {
    "#env": {
      "bare": "./bare/env.js",
      "default": "./node/env.js"
    },
    "fs": {
      "bare": "bare-fs"
    },
    "fs/promises": {
      "bare": "bare-fs/promises"
    },
    "path": {
      "bare": "bare-path"
    },
    "os": {
      "bare": "bare-os"
    }
  },
  "devDependencies": {
    "brittle": "^3.0.0",
    "pear-errors": "^1.0.0",
    "prettier": "^3.6.2",
    "prettier-config-holepunch": "^2.0.0",
    "url-file-url": "^1.0.5"
  },
  "dependencies": {
    "bare-env": "^3.0.0",
    "bare-fs": "^4.2.0",
    "bare-os": "^3.6.1",
    "bare-path": "^3.0.0",
    "hypercore-crypto": "^3.6.1",
    "hypercore-id-encoding": "^1.3.0",
    "pear-constants": "^1.0.0",
    "pear-link": "^4.1.0",
    "which-runtime": "^1.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/holepunchto/pear-state.git"
  },
  "bugs": {
    "url": "https://github.com/holepunchto/pear-state/issues"
  },
  "homepage": "https://github.com/holepunchto/pear-state#readme"
