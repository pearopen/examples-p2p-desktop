{
  "name": "pear-pipe",
  "version": "1.0.6",
  "main": "index.js",
  "type": "commonjs",
  "description": "Pear parent app connected bare-pipe",
  "license": "Apache-2.0",
  "files": [
    "bare/",
    "node/"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "test:gen": "brittle -r test/all.js test/*.test.js",
    "test": "npm run test:bare && npm run test:node",
    "test:bare": "brittle-bare --coverage test/all.js",
    "test:node": "brittle-node --coverage test/all.js"
  },
  "imports": {
    "#pipe": {
      "bare": "./bare/pipe.js",
      "default": "./node/pipe.js"
    },
    "child_process": {
      "bare": "bare-subprocess"
    },
    "fs": {
      "bare": "bare-fs"
    },
    "path": {
      "bare": "bare-path"
    }
  },
  "devDependencies": {
    "bare-path": "^3.0.0",
    "bare-subprocess": "^5.1.0",
    "brittle": "^3.0.0",
    "prettier": "^3.6.2",
    "prettier-config-holepunch": "^1.0.0"
  },
  "dependencies": {
    "bare-fs": "^4.1.6",
    "bare-pipe": "^4.0.6",
    "streamx": "^2.22.1",
    "which-runtime": "^1.3.0"
  }
}
