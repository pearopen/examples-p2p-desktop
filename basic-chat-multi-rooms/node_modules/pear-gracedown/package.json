{
  "name": "pear-gracedown",
  "version": "1.0.3",
  "main": "index.js",
  "type": "commonjs",
  "description": "Pear graceful closer",
  "license": "Apache-2.0",
  "files": [
    "bare/",
    "node/"
  ],
  "imports": {
    "#signals": {
      "bare": "./bare/signals.js",
      "default": "./node/signals.js"
    },
    "path": {
      "bare": "bare-path"
    },
    "os": {
      "bare": "bare-os"
    }
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "test:gen": "brittle -r test/all.js test/*.test.js",
    "test": "npm run test:bare && npm run test:node",
    "test:node": "brittle-node --coverage test/all.js",
    "test:bare": "brittle-bare --coverage test/all.js"
  },
  "devDependencies": {
    "bare-path": "^3.0.0",
    "brittle": "^3.0.0",
    "pear-pipe": "^1.0.1",
    "pear-run": "^1.0.0",
    "prettier": "^3.6.2",
    "prettier-config-holepunch": "^1.0.0",
    "which-runtime": "^1.3.0"
  },
  "dependencies": {
    "bare-os": "^3.6.1",
    "bare-signals": "^4.0.3",
    "safety-catch": "^1.0.2",
    "url-file-url": "^1.0.5"
  }
}
